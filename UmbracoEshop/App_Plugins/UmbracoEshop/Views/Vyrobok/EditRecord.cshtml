@model UmbracoEshop.lib.Models.VyrobokModel

<h1>VÝROBOK</h1>
@{
    using (Html.BeginUmbracoForm<UmbracoEshop.lib.Controllers.VyrobokController>("SaveRecord", null, new { @class = "form-horizontal", role = "form" }))
    {
        <div class="naplnspajzu-form">
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "Údaje sa nepodarilo uložiť. Prosím opravte chyby a skúste to znovu.")
            <div class="row">
                <div class="col-md-3">
                    <div class="form-item-hidden">
                        @Html.TextBoxFor(m => m.pk, new { @class = "form-control", @readonly = "readonly" })
                    </div>
                    <div class="form-item">
                        @Html.LabelFor(x => x.KodVyrobku)
                        @Html.TextBoxFor(m => m.KodVyrobku, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.KodVyrobku)
                    </div>
                </div>
                <div class="col-md-9">
                    <div class="form-item">
                        @Html.LabelFor(x => x.NazovVyrobku)
                        @Html.TextBoxFor(m => m.NazovVyrobku, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.NazovVyrobku)
                    </div>
                </div>
            </div>
                    @*<div class="col-md-6">
                    <div class="form-item">
                        @Html.LabelFor(x => x.ProducerWeb)
                        @Html.TextBoxFor(m => m.ProducerWeb, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.ProducerWeb)
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="form-item">
                        @Html.LabelFor(x => x.ProducerDescription)
                        @Html.TextAreaFor(m => m.ProducerDescription, new { @class = "form-control ckedit", rows = 10 })
                        @Html.ValidationMessageFor(m => m.ProducerDescription)
                    </div>
                </div>
                @*</div>*@
                <div class="row">
                    <div class="col-md-12">
                        <a href="#" onclick="document.getElementById('submitButton').click(); return false;" class="tlacitko-moje"@*btn btn-default btn-lg*@>Zapísať</a>
                        <a href="@Url.Content("~/clenska-sekcia/vyrobky")" class="tlacitko-moje">Späť</a>
                        <input type="submit" id="submitButton" class="hidden" />
                    </div>
                </div>
            </div>
    }
}

